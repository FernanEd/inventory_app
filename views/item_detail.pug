extends layout 

block content 
  h1=title  
  p #{item.description}.
  img.item-img(src=(item.imgUrl), alt="Item image.")

  .btn-group 
    a(href=(`/items/edit/${item._id}`))  
      button(class='btn') Edit item
    a(href=(`/items/delete/${item._id}`)) 
      button(class='btn btn-silver') Delete item

  if item.category
    p #[strong Category]: #[a(href=(item.category.url)) #{item.category.name}]
  else 
    p #[strong Category]: none

  hr.xsm

  .xsm.row
    div 
      h2 Price 
      p $#{item.price}.00
    div
      h2 In stock
      p #{item.stock}