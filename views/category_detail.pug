extends layout 

block content 
  h1=title  
  p #{category.description}.

  .btn-group 
    a(href=(`/categories/edit/${category._id}`))  
      button(class='btn') Edit category
    a(href=(`/categories/delete/${category._id}`)) 
      button(class='btn btn-silver') Delete category
  
  hr.xsm

  if items 
    p ok
  else
    p This category has no items.